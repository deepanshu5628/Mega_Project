<%- layout("/layouts/boilderplate.ejs") %>

    <h1>All Listings</h1>
    <br>
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
        <% for (let listing of alllistings){ %>
            <a href="/listings/show/<%=listing._id%>" class="listing-links">
                <div class="card col listing-card">
                    <img src="<%=listing.image%>" class="card-img-top" alt="listing image" style="height: 20rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b> <%= listing.title %> </b>
                            <br> &#8377
                            <%=listing.price.toLocaleString("en-IN") %>/night
                        </p>
                    </div>
                </div>
            </a>
            <% } %>

    </div>